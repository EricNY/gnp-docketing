<p id="notice"><%= notice %></p>

<h1>Listing Copyrights</h1>

<table>
  <thead>
    <tr>
      <th>Owner</th>
      <th>Author</th>
      <th>Work Type</th>
      <th>Title</th>
      <th>Published Date</th>
      <th>Registration Date</th>
      <th>Registration No.</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @copyrights.each do |copyright| %>
      <tr>
        <td><%= copyright.owner %></td>
        <td><%= copyright.author %></td>
        <td><%= copyright.workType %></td>
        <td><%= copyright.title %></td>
        <td><%= copyright.publishedDate %></td>
        <td><%= copyright.registrationDate %></td>
        <td><%= copyright.registrationNumber %></td>
        <td><%= link_to 'Show', copyright %></td>
        <td><%= link_to 'Edit', edit_copyright_path(copyright) %></td>
        <td><%= link_to 'Destroy', copyright, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

