<%= form_for(@copyright) do |f| %>
  <% if @copyright.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@copyright.errors.count, "error") %> prohibited this copyright from being saved:</h2>

      <ul>
      <% @copyright.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :owner %><br>
    <%= f.text_field :owner %>
  </div>
  <div class="field">
    <%= f.label :author %><br>
    <%= f.text_field :author %>
  </div>
  <div class="field">
    <%= f.label :workType, "Type" %><br>
    <%= f.select(:workType, ["TX", "VA", "SR", "PA"], {include_blank: '-- choose a type--'}) %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :publishedDate, "Published Date" %><br>
    <%= f.date_select :publishedDate, include_blank: true %>
  </div>
  <div class="field">
    <%= f.label :registrationDate, "Registration Date" %><br>
    <%= f.date_select :registrationDate, include_blank: true %>
  </div>
  <div class="field">
    <%= f.label :registrationNumber, "Registration Number" %><br>
    <%= f.number_field :registrationNumber %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
